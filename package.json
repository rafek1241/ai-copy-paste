{
  "name": "ai-context-collector",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "test": "vitest run",
    "test:ui": "vitest run --ui",
    "test:coverage": "vitest run --coverage",
    "test:rust": "cd src-tauri && cargo test",
    "driver": "tauri-driver --native-driver bin/msedgedriver.exe",
    "test:e2e": "wdio run tests/e2e/wdio.conf.ts",
    "test:e2e:headless": "CI=true wdio run tests/e2e/wdio.conf.ts",
    "test:e2e:run": "wait-on http://localhost:1420 tcp:4444 && npm run test:e2e",
    "e2e-session": "concurrently --kill-others \"npm run dev\" \"npm run driver\" \"npm run test:e2e:run\"",
    "test:all": "concurrently \"npm run test\" \"npm run test:rust\" \"npm run e2e-session\"",
    "build:tauri": "cd src-tauri && cargo build",
    "build:tauri:release": "cd src-tauri && cargo build --release",
    "version:check": "npx tsx scripts/check-version.ts",
    "version:bump": "npx tsx scripts/bump-version.ts",
    "lint:commit": "commitlint --from HEAD~1 --to HEAD --verbose",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "prepare": "husky"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-virtual": "^3.13.18",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gpt-tokenizer": "^3.4.0",
    "lucide-react": "^0.562.0",
    "mammoth": "^1.6.0",
    "pdfjs-dist": "^4.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.1.0",
    "@wdio/cli": "^8",
    "@wdio/globals": "^8",
    "@wdio/junit-reporter": "^8",
    "@wdio/local-runner": "^8",
    "@wdio/mocha-framework": "^8",
    "@wdio/spec-reporter": "^8",
    "@wdio/types": "^8",
    "autoprefixer": "^10.4.23",
    "commander": "^12.1.0",
    "concurrently": "^9.2.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-commits-parser": "^6.2.1",
    "edgedriver": "^6.3.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^1.1.0",
    "wait-on": "^9.0.3"
  }
}
